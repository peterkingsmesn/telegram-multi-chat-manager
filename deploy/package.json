{
  "name": "telegram-multi-chat-manager",
  "version": "1.0.0",
  "description": "텔레그램 멀티 챗 매니저",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "generate-icons": "node generate-icons.js",
    "build-python": "pyinstaller --onefile --windowed --add-data \"server;server\" --hidden-import telethon --hidden-import flask server/telegram_server.py",
    "pack": "electron-builder --dir",
    "dist": "npm run generate-icons && npm run build-python && electron-builder",
    "dist-win": "npm run generate-icons && npm run build-python && electron-builder --win",
    "dist-win-simple": "electron-builder --win --publish never",
    "prepare-python": "prepare-python.bat",
    "dist-win-full": "npm run prepare-python && electron-builder --win --publish never",
    "dist-mac": "npm run generate-icons && npm run build-python && electron-builder --mac",
    "dist-linux": "npm run generate-icons && npm run build-python && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "build-standalone": "python build-standalone.py && npm run dist-win-simple"
  },
  "keywords": [
    "telegram",
    "chat",
    "manager"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "sharp": "^0.32.6"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "electron-log": "^5.4.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "node-machine-id": "^1.1.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peterkingsmen/telegram-multi-chat-manager.git"
  },
  "build": {
    "appId": "com.yourcompany.telegram-manager",
    "productName": "Telegram Multi Chat Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!server/**/*",
      "!sessions/**/*",
      "!*.py",
      "!requirements.txt",
      "!venv/**/*",
      "!__pycache__/**/*"
    ],
    "extraResources": [
      {
        "from": "python-embed",
        "to": "python",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*.py",
          "**/*.json",
          "requirements.txt"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Peter TelegramManager",
      "certificateSubjectName": "Peter TelegramManager",
      "verifyUpdateCodeSignature": true,
      "signExts": [
        ".exe"
      ],
      "signDlls": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "peterkingsmen",
        "repo": "telegram-multi-chat-manager",
        "releaseType": "release"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon-linux.png",
      "category": "Network",
      "desktop": {
        "StartupNotify": "true",
        "Encoding": "UTF-8",
        "MimeType": "x-scheme-handler/telegram-manager"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yourcompany",
        "repo": "telegram-manager",
        "releaseType": "release"
      },
      {
        "provider": "generic",
        "url": "https://your-update-server.com/releases/",
        "channel": "latest"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "자동 업데이트를 통해 최신 기능과 보안 패치를 받으세요."
    }
  }
}
